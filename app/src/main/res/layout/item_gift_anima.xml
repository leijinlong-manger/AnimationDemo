<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-18dp"
        android:paddingLeft="10dp">
        <RelativeLayout
            android:id="@+id/rlparent"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_radius_animal_surrender"
            android:paddingRight="15dp"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/text_bg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="45dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">
                <TextView
                    android:id="@+id/send_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="LJL"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="送出"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:src="@mipmap/icon_livesdk_comment_user_default"></ImageView>
        <ImageView
            android:id="@+id/ivGift"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-6dp"
            android:visibility="invisible"></ImageView>
        <TextView
            android:id="@+id/giftNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ivGift"
            android:text="x1"
            android:textColor="#FF8600"
            android:textSize="35sp"
            android:textStyle="italic"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>